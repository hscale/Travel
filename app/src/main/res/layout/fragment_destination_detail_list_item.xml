<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fragment_secret_gift_item_selected_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/detail_list_item_left_line_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="——"
            android:textColor="@color/blue_light"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/detail_list_item_right_line_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="——"
            android:textColor="@color/blue_light"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/detail_list_item_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_toLeftOf="@id/detail_list_item_right_line_tv"
            android:layout_toRightOf="@id/detail_list_item_left_line_tv"
            android:ellipsize="end"
            android:textColor="@color/font_black_28"
            android:textSize="18sp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/detail_list_item_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="8"
        android:ellipsize="end"
        android:gravity="center"
        android:lineSpacingExtra="2dp"
        android:textColor="@color/font_black_28"
        android:textSize="16sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/font_black_5"/>
</LinearLayout>